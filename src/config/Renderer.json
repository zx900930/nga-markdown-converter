{
    "prefix": {
        "markdown": "(markdown) => ",
        "code": "(code, language) => ",
        "blockquote": "(quote) => ",
        "html": "(html) => ",
        "heading": "(text, level) => ",
        "hr": "() => ",
        "list": "(body, ordered) => ",
        "listitem": "(text) => ",
        "paragraph": "(text) => ",
        "table": "(header, body) => ",
        "tablerow": "(content) => ",
        "tablecell": "(content, header, align) => ",
        "strong": "(text) => ",
        "em": "(text) => ",
        "codespan": "(code) => ",
        "br": "() => ",
        "del": "(text) => ",
        "link": "(href, title, text) => ",
        "image": "(href, title, text) => ",
        "text": "(text) => "
    },
    "suffix_default": {
        "markdown": "${(s=>{let e=document.createElement('textarea');e.innerHTML=s;return e.value})(markdown.split('[br]').join(' '))}",
        "code": "[code]${code}[/code]\\n",
        "blockquote": "[quote]${quote.split('[br]').join('\\n').replace(/\\n$/,'')}[/quote]\\n",
        "html": "${((d,s)=>d.createElement('span').appendChild(d.createTextNode(s)).parentNode.innerHTML)(document,html)}",
        "heading": "[size=120%][b]${text}[/b][/size]\\n\\n",
        "hr": "[hr]\\n",
        "list": "[size=3][list${ordered?'=1':''}]\\n${body}[/list][/size]\\n",
        "listitem": "[*]${text.endsWith('\\n')?text:text+'\\n'}",
        "paragraph": "[size=3]${text.split('\\n').join('[br]').split('[br][br]').join('\\n')}[/size]\\n\\n",
        "table": "[align=center][table=98%]${header}${body}[/table][/align]\\n",
        "tablerow": "[tr]${content}[/tr]\\n",
        "tablecell": "[td]${header?'[b]'+content+'[/b]':content}[/td]",
        "strong": "[b]${text}[/b]",
        "em": "[i]${text}[/i]",
        "codespan": "[font=Monaco,Consolas,'Lucida Console','Courier New',serif]${code}[/font]",
        "br": "[br][br]",
        "del": "[s]${text}[/s]",
        "link": "[url=${href}]${text}[/url]",
        "image": "[img]${href}[/img]",
        "text": "${text}"
    }
}
